{
  "name": "studio",
  "private": true,
  "version": "1.0.2",
  "main": "package.json",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "sanity dev",
    "start": "sanity start",
    "build": "sanity build",
    "predeploy": "npm run build",
    "deploy": "sanity deploy",
    "deploy-graphql": "sanity graphql deploy",
    "release": "release-it",
    "release-minour": "release-it minor"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@sanity/code-input": "^5.1.2",
    "@sanity/color-input": "^4.0.3",
    "@sanity/icons": "^3.5.7",
    "@sanity/nuxt-loader": "^1.7.21",
    "@sanity/vision": "^3.72.1",
    "@sanity/visual-editing": "^2.12.11",
    "presentation": "^0.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^19.0.0",
    "sanity": "^3.72.1",
    "styled-components": "^6.1.14"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@sanity/eslint-config-studio": "^5.0.1",
    "@types/react": "^19.0.8",
    "@types/styled-components": "^5.1.34",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "release-it": "^19.0.6",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "printWidth": 300,
    "bracketSpacing": true
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release-studio v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features (Studio)"
            },
            {
              "type": "fix",
              "section": "Bug Fixes (Studio)"
            }
          ]
        }
      }
    }
  }
}
